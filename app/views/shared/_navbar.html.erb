<div class="navbar navbar-expand-sm navbar-light navbar">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "https://upload.wikimedia.org/wikipedia/commons/8/87/Global_Shapers_Logo.svg" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto align-items-center">
      <% if user_signed_in? %>
        <li class="nav-item active mr-3">
          <%= link_to "ACCUEIL", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item mr-3">
          <%= link_to "Découvrir", missions_path, class: "nav-link" %>
        </li>
         <li class="nav-item mr-3">
          <%= link_to "Créer une mission", new_mission_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
            <% if current_user.photo.attached? %>
              <%=cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false, height: 60, width: 60, crop: :fill, radius: 100, gravity: :face %>
            <% else %>
              <%= image_tag "photo-avatar-profil.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Mon profil", user_path(current_user), class: "dropdown-item" %>
            <%= link_to "Se déconnecter", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item active">
          <%= link_to "ACCUEIL", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "CONNEXION", new_user_session_path, class: "nav-link" %>
        </li>
         <li class="nav-item">
          <%= link_to "INSCRIPTION", new_user_registration_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
